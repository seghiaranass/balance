<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_balance_change_wizard_form" model="ir.ui.view">
        <field name="name">balance.change.wizard.form</field>
        <field name="model">balance.change.due.date.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="new_datetime" widget="date"/>
                </group>
                <footer>
                    <button string="Change" type="object" class="btn-primary" name="action_change_datetime"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
</odoo>